<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tvpal_theme_color"
    android:padding="10sp">

    <ListView
        android:id="@+id/cinemaSchedules"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/custom_list_selector"
        android:choiceMode="singleChoice"
        android:dividerHeight="0.7dp"
        android:divider="@color/base_color"/>

    <ProgressBar
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/cinemaNoResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_results"
        android:layout_centerInParent="true"
        android:visibility="visible"
        style="@style/BaseTextStyle.Big"/>

</RelativeLayout>